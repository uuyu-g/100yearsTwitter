<main>
	<div class="tweets">
		<div class="tweet">
	<%= form_tag("/posts/create") do %>
	<div class="create_tweet">
	
		<textarea name="content" id="" rows="5"></textarea>
		<input type="submit" value="Log" class="log_btn">

	</div>
	<%end%>
</div>
	<% @posts.each do |post| %>
		<% if post.created_at < 1.day.ago %>
	  	<div class="tweet past">
		<% else%>
		<div class="tweet">
		<%end%>
			<div class="tweet_text">
			<p><%= post.content %></p>
			</div>
			<div class="tweet_time">
			<% if post.created_at < 1.day.ago %>
				<%# 昨日の、一週間前の、一ヶ月前の、一年前の %>
				<span class="past_date"><%= time_ago_in_words_jp(post.created_at) + 'の'%></span>		
			<%end%>
			<%= post.created_at.to_s(:stime) %>
			</div>
    	</div>
	<%end%>
    </div>
</main>